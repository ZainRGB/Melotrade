@page "{id}"
@model Melotrade.Areas.Admin.Pages.EditUserModel
@* @model Admin.Pages.EditUserModel *@
@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<form method="post">
    <input type="hidden" asp-for="Input.Id" />

    <div class="form-floating mb-3">
        <input asp-for="Input.Fname" class="form-control" />
        <label asp-for="Input.Fname">First Name</label>
        <span asp-validation-for="Input.Fname" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Sname" class="form-control" />
        <label asp-for="Input.Sname">Surname</label>
        <span asp-validation-for="Input.Sname" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" />
        <label asp-for="Input.Email">Email</label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <select asp-for="Input.AccessControl" class="form-select">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </select>
        <label asp-for="Input.AccessControl">Access Control</label>
        <span asp-validation-for="Input.AccessControl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="./Manage" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}