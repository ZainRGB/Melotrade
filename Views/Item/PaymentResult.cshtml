@model Melotrade.Models.Payment
@{
    ViewData["Title"] = "Payment Confirmation";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded">
        <div class="card-body text-center">
            <h2 class="text-success mb-4"><i class="bi bi-check-circle-fill"></i> Payment Successful</h2>

            <p class="lead">Thank you, <strong>@Model.TblName @Model.TblSurname</strong>!</p>

            <p>Your payment has been successfully processed.</p>

            <hr />

            <h4>Payment Details</h4>
            <ul class="list-group list-group-flush text-start mx-auto" style="max-width: 500px;">
                <li class="list-group-item"><strong>Item:</strong> @Model.Amount</li>
                <li class="list-group-item"><strong>Amount Paid:</strong> $@Model.Amount</li>
                <li class="list-group-item"><strong>Payment Date:</strong> @Model.DDay.ToString("yyyy-MM-dd HH:mm")</li>
                <li class="list-group-item"><strong>Reference ID:</strong> @Model.id</li>
            </ul>

            <div class="mt-4">
                <a href="@Url.Action("Index", "Item")" class="btn btn-primary">Back to Store</a>
            </div>
        </div>
    </div>
</div>
